---
import config from "@config/config.json";
import social from "@config/social";
import { Image } from "astro:assets";

const styles = {
  articleStyle: "bg-zinc-50 dark:bg-zinc-900",
  maxWidthStyle:
    "mx-auto max-w-screen-lg px-4 py-0 pb-6 sm:px-6 sm:pb-12 lg:px-8",
  spaceBetweenStyle: "flex items-start justify-between",
  contentStyle: "w-3/5",
  bioStyle: "mt-1.5 text-sm text-zinc-500 dark:text-zinc-400 md:text-lg",
  socialInfoStyle: "m-auto flex space-x-5 pt-8",
  imageStyle: "w-24 rounded-lg md:w-32",
};
---

<article class={styles.articleStyle}>
  <div class={styles.maxWidthStyle}>
    <div class={styles.spaceBetweenStyle}>
      <div class={styles.contentStyle}>
        {config.author.bio.map((item) => <p class={styles.bioStyle}>{item}</p>)}

        <div class={styles.socialInfoStyle}>
          {
            social.networks.map((item) => (
              <a href={item.url} target="_blank" rel="noopener noreferrer">
                <figure>
                  <Fragment set:html={item.svg} />
                </figure>
              </a>
            ))
          }
        </div>
      </div>

      <figure>
        <Image
          class={styles.imageStyle}
          width={512}
          height={512}
          src={config.author.avatar}
          alt={config.author.name}
          decoding="async"
          loading="lazy"
        />
      </figure>
    </div>
  </div>
</article>
